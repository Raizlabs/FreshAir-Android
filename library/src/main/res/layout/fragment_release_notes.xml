<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <com.raizlabs.freshair.WrapContentHeightViewPager
        android:id="@+id/fragment_release_notes_viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.raizlabs.freshair.LinePageIndicator
        android:id="@+id/fragment_release_notes_pageIndicator"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        app:linePageIndicatorMaxLineWidth="16dp"
        app:linePageIndicatorSelectedColor="#888888"
        app:linePageIndicatorUnselectedColor="#CCCCCC"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/fragment_release_notes_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#888888"
        android:textColor="#FFFFFF"
        android:text="@string/Action.Done"/>

</LinearLayout>